<% provide(:title, "Shopping Cart") %>

<div class="container">
  <div class="col-md-12">
    <ul class="horizontal">
      <% @current_cart.line_items.each do |item| %>
        <li class="quantity">
          <%= item.quantity  %>
        </li>
        <li class="item">
          <%= item.product.title  %></br>
          <%= image_tag(item.product.img_url, class: 'image')  %></br>
          <%= button_to "Remove from Cart", line_item_path(item), method: :delete %>
        </li>
      <% end %>
    </ul>
    <ul>
      <li style="list-style: none;">
        <h4><%= number_to_currency(@current_cart.total_price) %></h4>
      </li>
    </ul>
  </div>
</div>
