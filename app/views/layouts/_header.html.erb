<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_url %></li>
        <% if @current_user.present? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle= "dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", @current_user %></li>
              <li><%= link_to "Settings", edit_user_url(@current_user)  %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", bye_url, method: "delete"  %></li>
            </ul>
          <% else %>
            <li><%= link_to "Log in", welcome_url  %>
            <li><%= link_to "Sign up", new_user_url %></li>
          </li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle= "dropdown">
           Shopping <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Your Cart", cart_url(@current_cart)  %></li>
            <li><%= link_to "Check Out", new_order_url  %></li>
            <li class="divider"></li>
            <li>
              <% if @current_cart.line_items.present?  %>
                <%= link_to "Empty your cart", @current_cart, method: :delete, data: {confirm: 'Are you sure?'}  %>
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </nav>
  </div>
</header>
