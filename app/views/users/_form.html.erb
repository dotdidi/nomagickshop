<%= simple_form_for @user, defaults: { input_html: {class: 'form-control'}} do |f|  %>
  <%= render 'layouts/errormsg', x: @user %>
  <%= f.input :username, wrapper: :vertical_input_group do %>
    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
    <%= f.input_field :username  %>
  <% end %>
  <%= f.input :email, wrapper: :vertical_input_group do %>
    <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
    <%= f.input_field :email  %>
  <% end %>
  <%= f.input :realname, label: 'Name', wrapper: :vertical_input_group do %>
    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
    <%= f.input_field :realname, as: :string %>
  <% end %>
  <%= f.input :phone, wrapper: :vertical_input_group do %>
    <span class="input-group-addon"><span class="glyphicon glyphicon-earphone"></span></span>
    <%= f.input_field :phone  %>
  <% end %>
  <%= f.input :address, wrapper: :vertical_input_group do %>
    <span class="input-group-addon"><span class="glyphicon glyphicon-home"></span></span>
    <%= f.input_field :address  %>
  <% end %>
  <%= f.input :password, wrapper: :vertical_input_group do %>
    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
    <%= f.input_field :password  %>
  <% end %>
  <%= f.input :password_confirmation, label: false, wrapper: :vertical_input_group do  %>
    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
    <%= f.input_field :password_confirmation  %>
  <% end %>
  <%= f.button :submit, yield(:button_text), input_html: {class: "btn btn-primary"} %>
<% end %>
