<% provide(:title, "Welcome") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: welcome_path) do |s|  %>
      <%= s.label :username, "User Name"  %>
      <%= s.text_field :username, class: 'form-control'  %>

      <%= s.label :password, "Password"  %>
      <%= s.password_field :password, class: 'form-control'  %>

      <%= s.submit "Log in", class: "btn btn-primary"  %>
    <% end %>
    <p>New here? <%= link_to "Sign up now!", new_user_path %>
  </div>
</div>

