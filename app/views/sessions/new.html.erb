<% provide(:title, "Welcome") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for :session, url: welcome_path, defaults: { input_html: {class: 'form-control'}} do |f|  %>
      <%= f.input :username, wrapper: :vertical_input_group do %>
        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
        <%= f.input_field :username  %>
      <% end %>
      <%= f.input :password, wrapper: :vertical_input_group do  %>
        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
        <%= f.input_field :password  %>
      <% end %>
      <%= f.button :submit,"Log in", input_html: {class: "btn btn-primary"} %>
    <% end %>
    <p>New here? <%= link_to "Sign up now!", new_user_path %>
  </div>
</div>

