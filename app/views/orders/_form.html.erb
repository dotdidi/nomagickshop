<div class="col-md-12">
  <%= simple_form_for @order, defaults: {input_html: {class: 'form-control'}} do |f|  %>
    <%= render 'layouts/errormsg', x:@order  %>
    <%= f.input :name, wrapper: :vertical_input_group do  %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
      <%= f.input_field :name, value: @order.name %>
    <% end %>
    <%= f.input :email, wrapper: :vertical_input_group do  %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
      <%= f.input_field :email, value: @order.email %>
    <% end %>
    <%= f.input :address, wrapper: :vertical_input_group do  %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-home"></span></span>
      <%= f.input_field :address, value: @order.address %>
    <% end %>
    <%= f.input :pay_type, wrapper: :vertical_input_group do  %>
      <ul class="radio-list">
        <li>
        <span class="input-group-addon">
          <%= f.radio_button :pay_type, 'Credit', checked: true, class: 'radio' %>
          <span class="glyphicon glyphicon-credit-card">
          </span>
          Credit Card
        </span>
      </li>
      <li>
        <span class="input-group-addon">
          <%= f.radio_button :pay_type, 'Transfer', class: 'radio' %>
          <span class="glyphicon glyphicon-transfer">
          </span>
          Transfer
        </span>
      </li>
      <li>
        <span class="input-group-addon">
          <%= f.radio_button :pay_type, 'Cash', class: 'radio' %>
          <span class="glyphicon glyphicon-usd">
          </span>
          Cash
        </span>
      </li>
      <li>
        <span class="input-group-addon">
          <%= f.radio_button :pay_type, 'PayPal', class: 'radio' %>
          <span class="glyphicon glyphicon-btc">
          </span>
            PayPal
        </span>
    </li>
    </ul>
    <% end %>
    <%= f.button :submit, "Next",input_html: {class: "btn btn-primary"}  %>
  <% end %>
</div>
