<%= simple_form_for @order, defaults: {input_html: {class: 'form-control'}} do |f|%>
  <%= render ' layouts/errormsg', x:@order  %>
  <%= f.input :card_type  %>
  <%= f.input :card_number  %>
  <%= f.input :card_verification  %>
  <%= f.input :card_expires_on, as: :date  %>
  <%= f.button :submit  %>
<% end %>
